<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <CheckBoxPreference
        android:title="@string/enable_sounds"
        android:defaultValue="true"
        android:key="pref_enableSounds">
    </CheckBoxPreference>

    <ListPreference
        android:title="@string/death_penalty"
        android:defaultValue="0"
        android:entries="@array/death_options"
        android:entryValues="@array/death_values"
        android:key="pref_deathPenalty">
    </ListPreference>
</PreferenceScreen>