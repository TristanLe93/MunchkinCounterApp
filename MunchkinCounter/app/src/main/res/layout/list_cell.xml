<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lv."
        android:id="@+id/levelText"
        android:textColor="@color/text_color"
        android:typeface="serif"
        android:layout_below="@+id/playerNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/level_size"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Name"
        android:id="@+id/playerNameText"
        android:textSize="@dimen/number_size"
        android:textColor="@color/text_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/totalNumberText"
        android:textSize="@dimen/strength_scoreboard"
        android:textColor="@color/text_color"
        android:typeface="serif"
        android:layout_marginLeft="45dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/strText"
        android:layout_alignStart="@+id/strText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/levelNumberText"
        android:textSize="@dimen/level_size"
        android:textColor="@color/text_color"
        android:layout_toEndOf="@+id/levelText"
        android:layout_below="@+id/playerNameText"
        android:layout_toRightOf="@+id/levelText"
        android:typeface="serif"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="STR:"
        android:id="@+id/strText"
        android:typeface="serif"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="90dp" />
</RelativeLayout>