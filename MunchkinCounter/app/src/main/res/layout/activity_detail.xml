<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/activity_detail"
    android:focusable="false"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/totalNumberText"
        android:textSize="@dimen/number_size"
        android:layout_below="@+id/strengthText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Strength"
        android:id="@+id/strengthText"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toStartOf="@+id/strengthText"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/strengthText"
        android:layout_below="@+id/totalNumberText"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Level"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelIncrementArrow"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_arrow_up"
            android:clickable="false"
            android:onClick="btnLevelIncrement" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10"
            android:id="@+id/levelNumberText"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/number_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelDecrementArrow"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_arrow_down"
            android:onClick="btnLevelDecrement" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_toRightOf="@+id/strengthText"
        android:layout_toEndOf="@+id/strengthText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gear"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gearIncrementArrow"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_arrow_up"
            android:onClick="btnGearIncrement" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="20"
            android:id="@+id/gearNumberText"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/number_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gearDecrementArrow"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_arrow_down"
            android:onClick="btnGearDecrement" />
    </LinearLayout>

</RelativeLayout>