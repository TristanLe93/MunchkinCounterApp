<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/activity_detail"
    android:background="@color/background_color" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/totalNumberText"
        android:textSize="@dimen/strength_number"
        android:layout_below="@+id/strengthText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Strength"
        android:id="@+id/strengthText"
        android:layout_marginTop="10sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:textColor="@color/text_color"
        android:textSize="@dimen/number_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gear"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:typeface="serif"
        android:textColor="@color/text_color"
        android:textSize="@dimen/player_name"
        android:layout_below="@+id/totalNumberText"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gearIncrementArrow"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_arrow_up"
        android:onClick="btnGearIncrement"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/gearNumberText"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/detail_number"
        android:textColor="@color/text_color"
        android:typeface="serif"
        android:layout_below="@+id/gearIncrementArrow"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gearDecrementArrow"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_arrow_down"
        android:onClick="btnGearDecrement"
        android:layout_below="@+id/gearNumberText"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toStartOf="@+id/gearIncrementArrow"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/totalNumberText"
        android:id="@+id/linearLayout"
        android:layout_toLeftOf="@+id/gearIncrementArrow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Level"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:typeface="serif"
            android:textColor="@color/text_color"
            android:textSize="@dimen/player_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelIncrementArrow"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_arrow_up"
            android:clickable="false"
            android:onClick="btnLevelIncrement" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10"
            android:id="@+id/levelNumberText"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/detail_number"
            android:textColor="@color/text_color"
            android:typeface="serif" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levelDecrementArrow"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_arrow_down"
            android:onClick="btnLevelDecrement" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combat"
        android:id="@+id/btn_fight"
        android:onClick="btnCalculator"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/strengthText"
        android:layout_alignStart="@+id/strengthText"
        android:layout_alignRight="@+id/strengthText"
        android:layout_alignEnd="@+id/strengthText"
        android:layout_marginBottom="10sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@+id/textView5"
        android:layout_below="@+id/totalNumberText"
        android:layout_toRightOf="@+id/textView5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Modifier"
            android:id="@+id/player_name_text"
            android:typeface="serif"
            android:textColor="@color/text_color"
            android:textSize="@dimen/player_name"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_player_gear_up"
            android:src="@drawable/ic_arrow_up"
            android:onClick="btnBonusIncrement"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10"
            android:id="@+id/bonusNumberText"
            android:textSize="@dimen/detail_number"
            android:textColor="@color/text_color"
            android:typeface="serif"
            android:layout_below="@+id/btn_fight"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_player_gear_down"
            android:src="@drawable/ic_arrow_down"
            android:onClick="btnBonusDecrement"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>